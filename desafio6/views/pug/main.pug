html
    head
        script(src='https://cdn.tailwindcss.com')
        title With pug

    body
    nav(class="flex items-center justify-between flex-wrap bg-blue-500 p-6 fixed w-full")
        div(class="w-full block flex-grow lg:flex lg:items-center lg:w-auto ")
            div(class="text-sm lg:flex-grow")
                a(href="/productos", class="block lg:inline-block lg:mt-0 text-white hover:text-white mr-4 text-right")="IR A PRODUCTOS"

    div(class="w-full h-screen flex flex-col items-center justify-center")
        h1(class="font-bold text-3xl mb-10")="Ingrese Producto"
            form(class="w-full max-w-lg", action="/productos", method="POST")
                div(class="flex flex-wrap -mx-3 mb-6")
                    div(class="w-full md:w-1/2 px-3 mb-6 md:mb-0")
                        label(class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2", for="grid-name")="Nombre"
                        input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white", id="grid-name", type="text", name="name")
                    div(class="w-full md:w-1/2 px-3")
                        label(class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2", for="grid-price")="Precio"
                        input(class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id="grid-price", type="text", name="price")
                div(class="flex flex-wrap -mx-3 mb-6")
                    div(class="w-full px-3")
                        label(class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2", for="grid-password")="Foto URL"
                        input(class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id="grid-password", type="text", placeholder="https://", name="thumbnail")
                button(class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded")="Enviar"